---
import Layout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import SectionHeader from "../../components/SectionHeader.astro";
import HoursAndLocation from "../../components/HoursAndLocation.astro";
import FormInput from "../../components/FormInput.astro";
import Textarea from "../../components/Textarea.astro";
import site from "../../data/site.json";

const basePath = import.meta.env.BASE_URL;
---

<Layout
  title="Contact Us | The Olive Branch"
  description="Get in touch with The Olive Branch in Perth. Find our location, hours, and contact information."
>
  <Fragment slot="header">
    <Header />
  </Fragment>

  <section class="contact-page">
    <div class="container contact-page__inner">
      <div class="contact-page__content">
        <SectionHeader
          title="Get in Touch"
          subtitle="We'd love to hear from you"
          centered={false}
        />

        <div class="contact-page__info">
          <h2 class="contact-page__section-title">Contact Information</h2>
          <div class="contact-page__details">
            <div class="contact-page__detail contact-page__detail--address">
              <h3 class="contact-page__detail-label">Address</h3>
              <address class="contact-page__detail-value">
                <div class="contact-page__address-line">
                  {site.address.street}
                </div>
                <div class="contact-page__address-line">
                  {site.address.suburb}
                  {site.address.state}
                  {site.address.postcode}
                </div>
                <div class="contact-page__address-line">
                  {site.address.country}
                </div>
              </address>
            </div>

            <div class="contact-page__detail">
              <h3 class="contact-page__detail-label">Phone</h3>
              <a
                href={`tel:${site.phone.replace(/\s/g, "")}`}
                class="contact-page__detail-value contact-page__link"
              >
                {site.phone}
              </a>
            </div>

            <div class="contact-page__detail">
              <h3 class="contact-page__detail-label">Email</h3>
              <a
                href={`mailto:${site.email}`}
                class="contact-page__detail-value contact-page__link"
              >
                {site.email}
              </a>
            </div>
          </div>
        </div>

        <div class="contact-page__form">
          <h2 class="contact-page__section-title">Send Us a Message</h2>
          <form class="contact-page__form-element">
            <FormInput
              name="name"
              label="Name"
              placeholder="Your name"
              required
            />

            <FormInput
              type="email"
              name="email"
              label="Email"
              placeholder="your@email.com"
              required
            />

            <div class="form-group">
              <label for="subject" class="form-label">
                Subject <span class="required">*</span>
              </label>
              <select id="subject" name="subject" class="form-input" required>
                <option value="">Select a subject</option>
                <option value="booking">Booking enquiry</option>
                <option value="feedback">Feedback</option>
                <option value="catering">Catering enquiry</option>
                <option value="other">Other</option>
              </select>
            </div>

            <Textarea
              name="message"
              label="Message"
              placeholder="How can we help you?"
              required
            />

            <button type="submit" class="contact-page__submit">
              Send Message
            </button>
          </form>
          <p class="contact-page__form-note">
            * This form is for demonstration purposes only. For bookings, please
            use our
            <a href={`${basePath}book/`}>booking page</a>.
          </p>
        </div>
      </div>

      <aside class="contact-page__sidebar">
        <HoursAndLocation stacked={true} />

        <div class="contact-page__quick-links">
          <h3 class="contact-page__sidebar-title">Quick Links</h3>
          <ul class="contact-page__sidebar-list">
            <li>
              <a href={`${basePath}menu/`} class="contact-page__sidebar-link">
                View our menu
              </a>
            </li>
            <li>
              <a href={`${basePath}book/`} class="contact-page__sidebar-link">
                Book a table
              </a>
            </li>
            <li>
              <a href={`${basePath}about/`} class="contact-page__sidebar-link">
                About us
              </a>
            </li>
            <li>
              <a href={`${basePath}services/`} class="contact-page__sidebar-link">
                Our services
              </a>
            </li>
          </ul>
        </div>
      </aside>
    </div>
  </section>

  <Fragment slot="footer">
    <Footer />
  </Fragment>
</Layout>

<style>
  .contact-page {
    padding: var(--spacing-16) 0;
  }

  .contact-page__inner {
    max-width: var(--container-lg);
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-12);
  }

  .contact-page__content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-12);
  }

  .contact-page__section-title {
    font-size: var(--text-2xl);
    margin-bottom: var(--spacing-6);
    color: var(--color-text-espresso);
  }

  .contact-page__details {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-6);
  }

  .contact-page__detail {
    background-color: var(--color-bg-white);
    border-radius: var(--radius-lg);
    padding: var(--spacing-6);
    border: 1px solid var(--color-border);
  }

  .contact-page__detail--address {
    grid-column: 1 / -1;
  }

  .contact-page__detail-label {
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--spacing-2);
  }

  .contact-page__detail-value {
    font-size: var(--text-lg);
    color: var(--color-text-espresso);
    line-height: var(--leading-relaxed);
    font-style: normal;
  }

  .contact-page__address-line {
    display: block;
    margin-bottom: var(--spacing-1);
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .contact-page__address-line:last-child {
    margin-bottom: 0;
  }

  .contact-page__link {
    color: var(--color-accent-olive);
    text-decoration: none;
    white-space: nowrap;
  }

  .contact-page__link:hover {
    text-decoration: underline;
  }

  .contact-page__form {
    background-color: var(--color-bg-white);
    border-radius: var(--radius-lg);
    padding: var(--spacing-8);
    border: 1px solid var(--color-border);
  }

  .contact-page__form-element {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-5);
  }

  .contact-page__form-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
  }

  .contact-page__label {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-espresso);
  }

  .contact-page__required {
    color: var(--color-accent-terracotta);
  }

  .contact-page__input,
  .contact-page__textarea {
    padding: var(--spacing-3);
    font-size: var(--text-base);
    font-family: var(--font-sans);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background-color: var(--color-bg-cream);
    transition:
      border-color var(--transition-fast),
      box-shadow var(--transition-fast);
  }

  .contact-page__input:focus,
  .contact-page__textarea:focus {
    outline: none;
    border-color: var(--color-accent-olive);
    box-shadow: 0 0 0 3px rgba(92, 122, 92, 0.1);
  }

  .contact-page__textarea {
    resize: vertical;
    min-height: 120px;
  }

  .contact-page__submit {
    background-color: var(--color-accent-olive);
    color: var(--color-bg-cream);
    padding: var(--spacing-4) var(--spacing-8);
    font-size: var(--text-lg);
    font-weight: 500;
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .contact-page__submit:hover {
    background-color: var(--color-accent-olive-dark);
    transform: translateY(-2px);
  }

  .contact-page__submit:focus-visible {
    outline: 2px solid var(--color-focus-ring);
    outline-offset: 2px;
  }

  .contact-page__form-note {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-top: var(--spacing-4);
  }

  .contact-page__sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-8);
  }

  .contact-page__sidebar-title {
    font-size: var(--text-xl);
    margin-bottom: var(--spacing-4);
    color: var(--color-text-espresso);
  }

  .contact-page__sidebar-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
  }

  .contact-page__sidebar-link {
    color: var(--color-accent-olive);
    text-decoration: none;
    font-size: var(--text-lg);
  }

  .contact-page__sidebar-link:hover {
    text-decoration: underline;
  }

  @media (min-width: 768px) {
    .contact-page__details {
      grid-template-columns: repeat(3, 1fr);
    }

    .contact-page__detail--address {
      grid-column: 1 / -1;
    }
  }

  @media (min-width: 1024px) {
    .contact-page__inner {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>

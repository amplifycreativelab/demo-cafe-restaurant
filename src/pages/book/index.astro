---
import Layout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import TestimonialCard from '../../components/TestimonialCard.astro';
import site from '../../data/site.json';
import reviews from '../../data/reviews.json';
---

<Layout
  title="Book a Table | The Olive Branch"
  description={`Reserve your table at The Olive Branch (concept demo). Experience our ${site.cuisine} in a warm, welcoming atmosphere.`}
>
  <Fragment slot="header">
    <Header />
  </Fragment>

  <section class="booking-page">
    <div class="container booking-page__inner">
      <div class="booking-page__content">
        <h1 class="booking-page__title">Book a Table</h1>
        <p class="booking-page__description">
          We'd love to host you at The Olive Branch. Reserve your table today and enjoy our {site.cuisine} in the heart of the city.
        </p>

        <div class="booking-page__card">
          <h2 class="booking-page__card-title">Make a Reservation</h2>
          <p class="booking-page__card-text">
            Click the button below to book through our preferred reservation platform.
          </p>
          <a
            href={site.booking.url}
            class="booking-page__btn"
            target="_blank"
            rel="noopener noreferrer"
          >
            Book Now
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              aria-hidden="true"
            >
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
              <polyline points="15 3 21 3 21 9" />
            </svg>
          </a>
          <p class="booking-page__card-note">
            You'll be redirected to our secure booking partner to complete your reservation.
          </p>
        </div>

        <div class="booking-page__info">
          <h3 class="booking-page__info-title">Booking Information</h3>
          <ul class="booking-page__info-list">
            <li>Walk-ins welcome subject to availability</li>
            <li>For groups of 8 or more, please use the contact form</li>
            <li>Special dietary requirements can be noted during booking</li>
            <li>Cancellations: Please give at least 24 hours notice</li>
          </ul>
        </div>
      </div>

      <aside class="booking-page__sidebar">
        <div class="booking-page__reviews">
          <h3 class="booking-page__sidebar-title">What Our Guests Say</h3>
          {reviews.reviews.slice(0, 2).map((review) => (
            <TestimonialCard
              name={review.name}
              text={review.text}
              rating={review.rating}
              date={review.date}
              verified={review.verified}
            />
          ))}
        </div>

        <div class="booking-page__contact">
          <h3 class="booking-page__sidebar-title">Contact Us</h3>
          <p class="booking-page__contact-text">
            This is a concept demo. For real bookings, visit:
          </p>
          <a
            href="https://amplifycreativelab.com"
            target="_blank"
            rel="nofollow noopener noreferrer"
            class="booking-page__phone"
          >
            amplifycreativelab.com
          </a>
        </div>
      </aside>
    </div>
  </section>

  <Fragment slot="footer">
    <Footer />
  </Fragment>
</Layout>

<style>
  .booking-page {
    padding: var(--spacing-16) 0;
  }

  .booking-page__inner {
    max-width: var(--container-lg);
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-12);
  }

  .booking-page__content {
    max-width: 600px;
  }

  .booking-page__title {
    font-size: var(--text-4xl);
    margin-bottom: var(--spacing-4);
  }

  .booking-page__description {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-8);
    line-height: var(--leading-relaxed);
  }

  .booking-page__card {
    background-color: var(--color-bg-white);
    border-radius: var(--radius-lg);
    padding: var(--spacing-8);
    border: 2px solid var(--color-accent-olive);
    text-align: center;
    margin-bottom: var(--spacing-8);
  }

  .booking-page__card-title {
    font-size: var(--text-2xl);
    margin-bottom: var(--spacing-4);
  }

  .booking-page__card-text {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-6);
  }

  .booking-page__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-2);
    background-color: var(--color-accent-olive);
    color: var(--color-bg-cream);
    padding: var(--spacing-4) var(--spacing-8);
    font-size: var(--text-lg);
    font-weight: 500;
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .booking-page__btn:hover {
    background-color: var(--color-accent-olive-dark);
    transform: translateY(-2px);
  }

  .booking-page__btn:focus-visible {
    outline: 2px solid var(--color-focus-ring);
    outline-offset: 2px;
  }

  .booking-page__card-note {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0;
  }

  .booking-page__info {
    background-color: var(--color-bg-warm-gray);
    border-radius: var(--radius-lg);
    padding: var(--spacing-6);
  }

  .booking-page__info-title {
    font-size: var(--text-xl);
    margin-bottom: var(--spacing-4);
  }

  .booking-page__info-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .booking-page__info-list li {
    position: relative;
    padding-left: var(--spacing-5);
    margin-bottom: var(--spacing-3);
    color: var(--color-text-muted);
  }

  .booking-page__info-list li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--color-accent-olive);
    font-weight: 600;
  }

  .booking-page__sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-8);
  }

  .booking-page__sidebar-title {
    font-size: var(--text-xl);
    margin-bottom: var(--spacing-4);
  }

  .booking-page__reviews {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
  }

  .booking-page__contact {
    background-color: var(--color-bg-white);
    border-radius: var(--radius-lg);
    padding: var(--spacing-6);
    border: 1px solid var(--color-border);
  }

  .booking-page__contact-text {
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-4);
  }

  .booking-page__phone {
    display: block;
    font-size: var(--text-2xl);
    font-weight: 600;
    color: var(--color-accent-olive);
    text-decoration: none;
    text-align: center;
  }

  .booking-page__phone:hover {
    text-decoration: underline;
  }

  @media (min-width: 768px) {
    .booking-page__inner {
      grid-template-columns: 1fr 1fr;
    }

    .booking-page__content {
      max-width: none;
    }
  }
</style>

---
interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
  class?: string;
}

const { title, subtitle, centered = false, class: className = '' } = Astro.props;
---

<header class={`section-header ${centered ? 'section-header--centered' : ''} ${className}`}>
  <h2 class="section-header__title">{title}</h2>
  {subtitle && <p class="section-header__subtitle">{subtitle}</p>}
</header>

<style>
  .section-header {
    margin-bottom: var(--spacing-8);
  }

  .section-header--centered {
    text-align: center;
  }

  .section-header__title {
    font-size: var(--text-3xl);
    margin-bottom: var(--spacing-3);
    color: var(--color-text-espresso);
  }

  .section-header__subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    margin: 0;
    max-width: 600px;
  }

  .section-header--centered .section-header__subtitle {
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 768px) {
    .section-header__title {
      font-size: var(--text-4xl);
    }
  }
</style>

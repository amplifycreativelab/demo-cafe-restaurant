---
interface Props {
  type?: 'text' | 'email' | 'tel' | 'number' | 'password';
  name: string;
  label: string;
  id?: string;
  placeholder?: string;
  required?: boolean;
  value?: string;
  error?: string;
  helpText?: string;
}

const {
  type = 'text',
  name,
  label,
  id = name,
  placeholder,
  required = false,
  value,
  error,
  helpText,
} = Astro.props;
---

<div class="form-group">
  <label for={id} class="form-label">
    {label} {required && <span class="required">*</span>}
  </label>
  <input
    type={type}
    id={id}
    name={name}
    class:list={['form-input', { 'has-error': error }]}
    placeholder={placeholder}
    required={required}
    value={value}
    aria-invalid={!!error}
    aria-describedby={error ? `${id}-error` : helpText ? `${id}-help` : undefined}
  />
  {error && <p id={`${id}-error`} class="form-error">{error}</p>}
  {helpText && !error && <p id={`${id}-help`} class="form-help">{helpText}</p>}
</div>

<style>
  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
  }

  .form-label {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-espresso);
  }

  .required {
    color: var(--color-accent-terracotta);
  }

  .form-input {
    padding: var(--spacing-3);
    font-size: var(--text-base);
    font-family: var(--font-sans);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background-color: var(--color-bg-cream);
    transition:
      border-color var(--transition-fast),
      box-shadow var(--transition-fast);
    width: 100%;
  }

  .form-input:focus {
    outline: none;
    border-color: var(--color-accent-olive);
    box-shadow: 0 0 0 3px rgba(92, 122, 92, 0.1);
  }

  .form-input.has-error {
    border-color: var(--color-accent-terracotta);
  }

  .form-error {
    font-size: var(--text-sm);
    color: var(--color-accent-terracotta);
    margin: 0;
  }

  .form-help {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0;
  }
</style>

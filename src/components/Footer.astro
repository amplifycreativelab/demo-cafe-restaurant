---
import site from '../data/site.json';

const currentYear = new Date().getFullYear();
const basePath = import.meta.env.BASE_URL;
const addressLine2 = [site.address.suburb, site.address.state, site.address.postcode]
  .filter(Boolean)
  .join(" ");
---

<footer class="footer">
  <div class="container footer-inner">
    <div class="footer-main">
      <div class="footer-brand">
        <h2 class="footer-title">{site.name}</h2>
        <p class="footer-tagline">{site.tagline}</p>
      </div>
      
      <div class="footer-section">
        <h3 class="footer-heading">Contact</h3>
        <address class="footer-address">
          <p>{site.address.street}</p>
          <p>{addressLine2}</p>
          <p>{site.address.country}</p>
        </address>
        <p class="footer-contact">
          <span class="footer-note">Non-indexed concept demo.</span>
        </p>
        <p class="footer-contact">
          <a
            href="https://amplifycreativelab.com"
            target="_blank"
            rel="nofollow noopener noreferrer"
            class="footer-link"
          >
            amplifycreativelab.com
          </a>
        </p>
      </div>
      
      <div class="footer-section">
        <h3 class="footer-heading">Hours</h3>
        <p class="footer-hours">{site.hoursDisplay.weekdays}</p>
        <p class="footer-hours">{site.hoursDisplay.weekend}</p>
      </div>
      
      <div class="footer-section">
        <h3 class="footer-heading">Quick Links</h3>
        <ul class="footer-links">
          <li><a href={`${basePath}menu/`} class="footer-link">Menu</a></li>
          <li><a href={`${basePath}book/`} class="footer-link">Book a table</a></li>
          <li><a href={`${basePath}about/`} class="footer-link">About us</a></li>
          <li><a href={`${basePath}contact/`} class="footer-link">Contact</a></li>
          <li><a href={`${basePath}privacy/`} class="footer-link">Privacy</a></li>
        </ul>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p class="footer-copyright">
        &copy; {currentYear} {site.name}. All rights reserved.
      </p>
      <div class="footer-social">
        <a
          href={site.social.instagram}
          class="footer-social-link"
          aria-label="Follow us on Instagram"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </a>
        <a
          href={site.social.facebook}
          class="footer-social-link"
          aria-label="Follow us on Facebook"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-text-espresso);
    color: var(--color-bg-cream);
    padding-top: var(--spacing-16);
    padding-bottom: var(--spacing-8);
  }

  .footer-inner {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-8);
  }

  .footer-main {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-8);
  }

  .footer-brand {
    text-align: center;
  }

  .footer-title {
    font-size: var(--text-3xl);
    color: var(--color-bg-cream);
    margin-bottom: var(--spacing-2);
  }

  .footer-tagline {
    color: var(--color-text-light);
    font-size: var(--text-lg);
    margin: 0;
  }

  .footer-section {
    text-align: center;
  }

  .footer-heading {
    font-size: var(--text-lg);
    color: var(--color-bg-cream);
    margin-bottom: var(--spacing-4);
    font-family: var(--font-serif);
  }

  .footer-address {
    font-style: normal;
    margin-bottom: var(--spacing-3);
    color: var(--color-text-light);
  }

  .footer-address p {
    margin: 0;
  }

  .footer-contact {
    margin: 0 0 var(--spacing-2);
  }

  .footer-note {
    color: var(--color-text-light);
  }

  .footer-link {
    color: var(--color-text-light);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer-link:hover {
    color: var(--color-bg-cream);
  }

  .footer-hours {
    color: var(--color-text-light);
    margin: 0 0 var(--spacing-2);
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: var(--spacing-2);
  }

  .footer-bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-4);
    padding-top: var(--spacing-8);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-copyright {
    color: var(--color-text-light);
    margin: 0;
    font-size: var(--text-sm);
  }

  .footer-social {
    display: flex;
    gap: var(--spacing-4);
  }

  .footer-social-link {
    color: var(--color-bg-cream);
    transition: opacity var(--transition-fast);
  }

  .footer-social-link:hover {
    opacity: 0.8;
  }

  @media (min-width: 768px) {
    .footer-main {
      grid-template-columns: 1.5fr 1fr 1fr 1fr;
      text-align: left;
    }

    .footer-brand {
      text-align: left;
    }

    .footer-section {
      text-align: left;
    }

    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>

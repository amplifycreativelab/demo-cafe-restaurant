---
interface Props {
  class?: string;
  featured?: boolean;
}

const { class: className = '', featured = false } = Astro.props;
---

<article class={`card ${featured ? 'card--featured' : ''} ${className}`}>
  <slot />
</article>

<style>
  .card {
    background-color: var(--color-bg-white);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    overflow: hidden;
    transition: box-shadow var(--transition-base);
  }

  .card:hover {
    box-shadow: var(--shadow-lg);
  }

  .card--featured {
    border-color: var(--color-accent-terracotta);
  }
</style>
